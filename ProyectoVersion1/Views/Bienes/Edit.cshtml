@model ProyectoVersion1.Models.Bien

@{
    ViewData["Title"] = "Editar bien";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 fw-bold">Editar Bien</h1>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0 mt-2 fw-bold">Detalles del Bien</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Codigo" class="form-label fw-bold"></label>
                            <input asp-for="Codigo" class="form-control" />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label fw-bold"></label>
                            <input asp-for="Precio" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EstadoInicial" class="form-label fw-bold"></label>
                            <select asp-for="EstadoInicial" class="form-control" asp-items="ViewBag.EstadoInicial"></select>
                            <span asp-validation-for="EstadoInicial" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaIngreso" class="form-label fw-bold"></label>
                            <input asp-for="FechaIngreso" class="form-control" />
                            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EspacioId" class="form-label fw-bold"></label>
                            <select asp-for="EspacioId" class="form-control" asp-items="ViewBag.EspacioId"></select>
                            <span asp-validation-for="EspacioId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaId" class="form-label fw-bold"></label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fa-regular fa-floppy-disk"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-circle-left"></i> Regresar a la lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

