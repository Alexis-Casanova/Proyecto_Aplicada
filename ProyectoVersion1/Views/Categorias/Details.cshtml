@model ProyectoVersion1.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Detalles de la Categoría</h1>

    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Información de la Categoría</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripción)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripción)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="fa-regular fa-pen-to-square"></i> Editar
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fa-solid fa-circle-left"></i> Regresar a la lista
            </a>
        </div>
    </div>
</div>
