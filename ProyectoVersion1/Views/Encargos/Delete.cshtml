@model ProyectoVersion1.Models.Encargo

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Eliminar Encargo</h1>

    <div class="alert alert-warning text-center" role="alert">
        <h3>¿Estás seguro de que quieres eliminar este encargo?</h3>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Detalles del Encargo</h4>
        </div>
        <div class="card-body">
            <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bien.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoActual)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoActual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
            </dl>
        </div>
        <div class="text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fa-solid fa-trash"></i>
                </button>
                <div class=" card-footer text-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-circle-left"></i> Regresar a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

