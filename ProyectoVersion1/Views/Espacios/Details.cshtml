@model ProyectoVersion1.Models.Espacio

@{
    ViewData["Title"] = "Detalle espacio";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 fw-bold">Detalles del Espacio</h1>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0 fw-bold mt-2">Información del Espacio</h4>
        </div>
        <div class="card-body">
            <dl class="row">

                <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
                <dt class="col-sm-2 fw-bold mt-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
                <dt class="col-sm-2 fw-bold mt-2">
            @Html.DisplayNameFor(model => model.Ubicacion)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Ubicacion)
        </dd>
            </dl>
            <div class="text-center mt-4">
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-regular fa-pen-to-square"></i></a>
            </div>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-secondary" asp-action="Index"><i class="fa-solid fa-circle-left"></i> Regresa a la lista</a>
        </div>
    </div>
</div>

