        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contraseña)
        </dd> *@
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
            <div class="text-center mt-4">
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-regular fa-pen-to-square"></i></a>
            </div>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-secondary" asp-action="Index"><i class="fa-solid fa-circle-left"></i> Regresa a la lista</a>
        </div>
